    echo ""

    read -p "sample expression : " expression

    blacklist='[`$&|;> ]'

    if [[ $expression =~ $blacklist ]]; then
        echo "Trying to do something funny?"
    else
        bash -c 'echo $(('$expression'))'
    fi
else
    echo "Oh what are you doing?!"
